{
  "name": "darpan-uno",
  "version": "2.0.0",
  "description": "Darpan Uno - Open Source Advanced Arduino IDE with AI Integration by Dayanand Darpan",
  "author": {
    "name": "Dayanand Darpan",
    "email": "dayanand.darpan@gmail.com",
    "url": "https://www.dayananddarpan.me"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dayananddarpan/darpan-uno.git"
  },
  "bugs": {
    "url": "https://github.com/dayananddarpan/darpan-uno/issues"
  },
  "homepage": "https://www.dayananddarpan.me/darpan-uno",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:renderer\"",
    "dev:ui": "concurrently \"npm run dev:electron:ui\" \"npm run dev:renderer\"",
    "dev:electron": "tsc -p electron/tsconfig.json && electron dist/electron/main.js",
    "dev:electron:ui": "set NODE_ENV=development && electron electron/main_simple.js",
    "dev:renderer": "vite",
    "start": "npm run dev:ui",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "electron": "electron dist/electron/main.js",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win --x64",
    "dist:portable": "electron-builder --win --x64 --config.win.target=portable",
    "dist:installer": "electron-builder --win --x64 --config.win.target=nsis",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "package": "npm run build && npm run dist:portable",
    "package:installer": "npm run build && npm run dist:installer",
    "package:win": "npm run build && electron-packager . DarpanUno --platform=win32 --arch=x64 --out=dist/packager --overwrite --app-copyright='Copyright (C) 2024 Darpan Uno' --app-version=2.0.0",
    "release": "npm run build && npm run dist --publish=always",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "arduino",
    "ide",
    "ai",
    "development",
    "electronics",
    "iot",
    "programming",
    "open-source",
    "darpan-uno",
    "dayanand-darpan"
  ],
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@monaco-editor/react": "^4.6.0",
    "@types/uuid": "^9.0.7",
    "chokidar": "^3.5.3",
    "diff": "^5.1.0",
    "marked": "^11.1.1",
    "monaco-editor": "^0.45.0",
    "openai": "^4.20.1",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.dayananddarpan.darpanuno",
    "productName": "Darpan Uno",
    "copyright": "Copyright Â© 2025 Dayanand Darpan",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "README.md",
        "to": "README.md"
      },
      {
        "from": "LICENSE",
        "to": "LICENSE"
      }
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}",
      "publisherName": "Dayanand Darpan"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-setup-${version}.${ext}",
      "shortcutName": "Darpan Uno",
      "uninstallDisplayName": "Darpan Uno - Arduino IDE with AI",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "renderer/public/darpan-uno-logo.svg",
      "artifactName": "${productName}-${version}-mac.${ext}",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "renderer/public/darpan-uno-logo.svg",
      "artifactName": "${productName}-${version}-linux.${ext}",
      "category": "Development",
      "desktop": {
        "Name": "Darpan Uno",
        "Comment": "Advanced Arduino IDE with AI Integration",
        "Keywords": "arduino;ide;programming;electronics;iot;ai;"
      }
    },
    "publish": [
      {
        "provider": "github",
        "owner": "dayananddarpan",
        "repo": "darpan-uno"
      }
    ]
  }
}
