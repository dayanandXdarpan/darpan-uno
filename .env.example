# Darpan Uno API Keys Configuration
# Copy this file to .env and add your API keys

# OpenAI API Key (for GPT models)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Key (for Gemini Pro models)
# Get your key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Anthropic API Key (for Claude models) 
# Get your key from: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Custom API endpoints
OPENAI_BASE_URL=https://api.openai.com/v1
GOOGLE_BASE_URL=https://generativelanguage.googleapis.com/v1

# Application Settings
APP_NAME=Darpan Uno
APP_VERSION=2.0.0
DEVELOPER_NAME=Dayanand Darpan
DEVELOPER_EMAIL=dayanand.darpan@gmail.com
DEVELOPER_WEBSITE=https://www.dayananddarpan.me

# Free Gemini (No API key required)
# The app includes free Gemini access that doesn't require any API key
ENABLE_FREE_GEMINI=true

# Arduino IDE Settings
ARDUINO_CLI_PATH=arduino-cli
DEFAULT_BOARD=arduino:avr:uno
DEFAULT_PORT=COM3

# AI Model Settings
DEFAULT_MODEL=gemini-free
ENABLE_OFFLINE_MODE=true
MAX_TOKENS=8192
TEMPERATURE=0.7

# Security Settings
CORS_ORIGIN=http://localhost:3000
ENABLE_API_KEY_ENCRYPTION=true

# Debug Settings
DEBUG_MODE=false
LOG_LEVEL=info
