{
  "name": "Darpan Uno",
  "short_name": "Darpan Uno",
  "description": "Advanced Arduino IDE with AI Integration by Dayanand Darpan",
  "version": "2.0.0",
  "author": "Dayanand Darpan (dayanand.darpan@gmail.com)",
  "homepage_url": "https://www.dayananddarpan.me",
  "manifest_version": 3,
  "start_url": "/",
  "display": "standalone",
  "background_color": "#1e1e1e",
  "theme_color": "#007acc",
  "orientation": "landscape",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "icons": [
    {
      "src": "icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icon-512.png", 
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "permissions": [
    "serial",
    "usb",
    "bluetooth",
    "camera", 
    "microphone",
    "geolocation",
    "notifications",
    "clipboardRead",
    "clipboardWrite",
    "fullscreen",
    "storage",
    "unlimitedStorage",
    "background",
    "activeTab",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "http://localhost/*",
    "https://localhost/*",
    "https://arduino.cc/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://localhost/*", 
    "https://arduino.cc/*",
    "https://downloads.arduino.cc/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://raw.githubusercontent.com/*",
    "https://api.github.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'unsafe-eval' 'unsafe-inline'; object-src 'self'; connect-src 'self' https: wss: ws: http: data: blob:;"
  },
  "features": {
    "serial": {
      "description": "Required for Arduino board communication via USB/serial"
    },
    "usb": {
      "description": "Required for direct USB communication with Arduino boards"
    },
    "bluetooth": {
      "description": "Required for wireless Arduino board communication"
    },
    "camera": {
      "description": "Optional: For AI-powered visual debugging features"
    },
    "microphone": {
      "description": "Optional: For voice-controlled coding assistance"
    },
    "notifications": {
      "description": "For build status and upload completion alerts"
    },
    "clipboard": {
      "description": "For code copy/paste functionality"
    },
    "storage": {
      "description": "For saving projects and user preferences"
    }
  }
}
